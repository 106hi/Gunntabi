<div class="container">
  <div class="row my-3">
    <h3>投稿一覧</h3>
  </div>
<div class="row">
<table class="table table-hover">
  <thead class="table-active">
    <tr>
      <th></th>
      <th>スポット</th>
      <th>投稿者</th>
      <th>投稿日</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <% @posts.each do |post| %>
  <tbody>
    <tr>
      <td><%= image_tag post.get_post_image, size: "200x150", class: "post_img" %></td>
      <td>
        <%= link_to admin_post_path(post.id) do %>
          <%= post.post_name %>
        <% end %>
      </td>
      <td>
        <%= link_to admin_customer_path(post.customer.id) do %>
          <%= post.customer.nickname %>
        <% end %>
      </td>
      <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
      <td id="favorite-btn<%= post.id %>">
        <%= render "public/favorites/favorite-btn", post: post %>
      </td>
      <td><%= render "public/post_comments/counter", post: post %></td>
    </tr>
  </tbody>
  <% end %>
</table>
</div>
</div>