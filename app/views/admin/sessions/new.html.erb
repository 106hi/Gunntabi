<div class="container">
  <div class="row">
    <div class="col-sm-10 px-sm-0 offset-sm-1 mt-3">
      <span style="background-color: #f2f2f2; font-size: 23px;">管理者ログイン</span>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-sm-2 px-sm-0 offset-sm-1 my-3">
        <%= f.label :email, "メールアドレス" %>
      </div>
      <div class="col-sm-3 px-sm-0 my-3">
        <%= f.text_field :email, :size => "30", autofocus: true %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2 px-sm-0 offset-sm-1">
        <%= f.label :password, "パスワード" %>
      </div>
      <div class="col-sm-3 px-sm-0">
        <%= f.password_field :password, :size => "30" %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2 offset-sm-3">
        <%= f.submit "ログイン", class: "btn btn-primary px-4 mt-3 mb-5" %>
      </div>
    </div>
  <% end %>
  <div class="row my-3">
    <div class="col-sm-4 px-sm-0 offset-sm-1">
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>