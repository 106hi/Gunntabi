<h3>投稿編集</h3>
<%= form_with model: @post do |f| %>
<table>
  <tr>
    <th><%= f.label :画像 %></th>
    <td><%= f.file_field :image, accept: "image/*" %></td>
  </tr>
  <tr>
    <th><%= f.label :スポット名 %></th>
    <td><%= f.text_field :post_name %></td>
  </tr>
  <tr>
    <th><%= f.label :おすすめポイント %></th>
    <td><%= f.text_area :introduction %></td>
  </tr>
  <tr>
    <th><%= f.label "タグ" %></th>
    <!--value: @tag_listでフォームに元の情報を入れて出力-->
    <td><%= f.text_field :tag_name, value: @tag_list, class: "form-control" %></td>
    <td>※「,（カンマ）」を入れることでタグを複数作成できます。</td>
  </tr>
  <tr>
    <th><%= f.label :住所 %></th>
    <td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <th><%= f.label :エリア %></th>
    <td><%= f.select :area, Post.areas_i18n.invert %></td>
  </tr>
</table>
<%= f.submit "変更を保存", class: 'btn btn-success' %>
<% end %>