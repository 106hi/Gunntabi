<div class="container">
  <div class="my-3 ml-5">
    <% if params['area'] %>
      <h3><%= @area_name %>一覧</h3>
    <% else %>
      <h3>投稿一覧</h3>
    <% end %>
  </div>
  <h5 class="mt-3 ml-5">タグリスト</h5>
  <div class="row mb-4 ml-5">
    <%= render "public/posts/tag_list", tag_list: @tag_list %>
  </div>
  <div class="row mx-2">
    <%= render "public/posts/post_card", posts: @posts %>
  </div>
</div>