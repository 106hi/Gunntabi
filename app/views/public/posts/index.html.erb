<h3>投稿一覧</h3>
<table class="table table-hover">
  <thead class="table-active">
    <tr>
      <th></th>
      <th>スポット</th>
      <th>投稿者</th>
      <th>投稿日</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <% @posts.each do |post| %>
  <tbody>
    <tr>
      <!--複数画像の１枚目だけ表示-->
      <td><%= image_tag post.get_image[0], size: "150x150" %></td>
      <td>
        <%= link_to post_path(post.id) do %>
          <%= post.post_name %>
        <% end %>
      </td>
      <td>
        <%= link_to customer_path(post.customer.id) do %>
          <%= post.customer.nickname %>
        <% end %>
      </td>
      <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
      <td id="favorite-btn<%= post.id %>">
        <%= render "public/favorites/favorite-btn", post: post %>
      </td>
      <td><%= render "public/post_comments/counter", post: post %></td>
    </tr>
  </tbody>
  <% end %>
</table>