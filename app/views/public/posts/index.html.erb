<div class="container">
  <div class="row my-3">
    <% if params['area'] %>
      <h3><%= @area_name %>一覧</h3>
    <% else %>
      <h3>投稿一覧</h3>
    <% end %>
  </div>
  <h5 class="row mt-3">タグリスト</h5>
  <div class="row mb-4">
    <%= render "public/posts/tag_list", tag_list: @tag_list %>
  </div>
</div>
<div class="row mx-1">
  <%= render "public/posts/post_card", posts: @posts %>
</div>