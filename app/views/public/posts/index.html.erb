<div class="container">
  <div class="row">
    <h3>投稿一覧</h3>
  </div>
  <div class="row mt-3 mb-1">
<h5>タグリスト</h5>
</div>
<div class="row mb-3">
<% @tag_list.each do |list| %>
  <% if list.posts.count > 0 %>
    <%= link_to list.tag_name, tag_posts_path(tag_id: list.id) %>
    <%= "(#{list.posts.count})" %>
  <% end %>
<% end %>
</div>
<div class="row">
<table class="table table-hover">
  <thead class="table-active">
    <tr>
      <th></th>
      <th>スポット</th>
      <th>投稿者</th>
      <th>投稿日</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <% @posts.each do |post| %>
  <tbody>
    <tr>
      <td><%= image_tag post.get_post_image, size: "200x150", class: "post_img" %></td>
      <td>
        <%= link_to post_path(post.id) do %>
          <%= post.post_name %>
        <% end %>
      </td>
      <td>
        <%= link_to customer_path(post.customer.id) do %>
          <%= post.customer.nickname %>
        <% end %>
      </td>
      <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
      <td id="favorite-btn<%= post.id %>">
        <%= render "public/favorites/favorite-btn", post: post %>
      </td>
      <td><%= render "public/post_comments/counter", post: post %></td>
    </tr>
  </tbody>
  <% end %>
</table>
</div>
</div>