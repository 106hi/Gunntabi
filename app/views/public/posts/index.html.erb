<h3>投稿一覧</h3>
<table class="table table-hover">
  <thead class="table-active">
    <tr>
      <th></th>
      <th>スポット</th>
      <th>投稿者</th>
      <th>投稿日</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <% @posts.each do |post| %>
  <tbody>
    <tr>
      <!--複数画像の１枚目だけ表示-->
      <td><%= image_tag post.get_image[0], size: "150x150" %></td>
      <td><%= post.post_name %></td>
      <td><%= post.customer.nickname %></td>
      <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
      <td>いいね</td>
      <td>コメント</td>
    </tr>
  </tbody>
  <% end %>
</table>