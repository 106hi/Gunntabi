<div class="container">
  <div class="row my-3">
    <% if params['area'] %>
      <h3><%= @area_name %>一覧</h3>
    <% else %>
      <h3>投稿一覧</h3>
    <% end %>
  </div>
  <div class="row mt-3 mb-1">
    <h5>タグリスト</h5>
  </div>
  <div class="row mb-3">
    <% @tag_list.each do |list| %>
      <% if list.posts.count > 0 %>
        <%= link_to tag_posts_path(tag_id: list.id), style: 'color: maroon;' do %>
          <i class="fa-solid fa-hashtag"></i><%= list.tag_name %>
        <% end %>
        <div class="mr-2">
          <%= "(#{list.posts.count})" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<div class="row mx-1">
  <%= render "public/posts/post_card", posts: @posts %>
</div>