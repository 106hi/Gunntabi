<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <span style="background-color: #f2f2f2; font-size: 23px;">新規会員登録</span>
      <div class="mt-2">
        <require>*</require> が付いている項目は<require>入力必須</require>です。
      </div>
    </div>
  </div>
  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
      <div class="row">
      <div class="col-md-3 px-md-0 offset-md-1 my-3">
        <%= f.label "名前" %>
      </div>
      <div class="col-md-4 px-md-0 my-3">
        <%= f.label :last_name, "(姓)" %> <require>*</require>
        <%= f.text_field :last_name, size: "25" %>
      </div>
      <div class="col-md-4 px-md-0 my-3">
        <%= f.label :first_name, "(名)" %> <require>*</require>
        <%= f.text_field :first_name, size: "25" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3 col-md-4 px-md-0 offset-md-1 my-3">
        <%= f.label :nickname, "ニックネーム(20文字以内)" %> <require>*</require>
      </div>
      <div class="col-md-4 px-md-0 my-3">
        <%= f.text_field :nickname, size: "40" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3 col-md-4 px-md-0 offset-md-1 my-3">
        <%= f.label :email, "メールアドレス" %> <require>*</require>
      </div>
      <div class="col-md-4 px-md-0 my-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "40" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3 col-md-4 px-md-0 offset-md-1 my-3">
        <%= f.label :phone_number, "電話番号(ハイフンなし)" %> <require>*</require>
      </div>
      <div class="col-md-4 px-md-0 my-3">
        <%= f.text_field :phone_number, size: "30" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3 col-md-4 px-md-0 offset-md-1 my-3">
        <%= f.label :password, "パスワード(６文字以上)" %> <require>*</require>
      </div>
      <div class="col-md-4 px-md-0 my-3">
        <%= f.password_field :password, size: "30" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3 col-md-4 px-md-0 offset-md-1 my-3">
        <%= f.label :password_confirmation, "パスワード(確認用)" %> <require>*</require>
      </div>
      <div class="col-md-4 px-md-0 my-3">
        <%= f.password_field :password_confirmation, size: "30" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-2 offset-lg-4 offset-md-5">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto mt-5">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>