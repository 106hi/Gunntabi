<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <span style="background-color: #f2f2f2; font-size: 23px;">新規会員登録</span>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <table>
          <tr>
            <div class="form_group">
              <th scope="col">
                <%= f.label "名前" %>
              </th>
              <td><%= f.label :last_name, "(姓)" %></td>
              <td><%= f.text_field :last_name %></td>
              <td><%= f.label :first_name, "(名)" %></td>
              <td><%= f.text_field :first_name %></td>
            </div>
          </tr>
          <tr>
            <div class="form_group">
              <th><%= f.label :nickname, "ニックネーム" %></th>
              <td></td>
              <td><%= f.text_field :nickname %></td>
            </div>
          </tr>
          <tr>
            <div class="form_group">
              <th><%= f.label :email, "メールアドレス" %></th>
              <td></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :phone_number, "電話番号(ハイフンなし)" %></th>
              <td></td>
              <td><%= f.text_field :phone_number %></td>
            </div>
          </tr>
          <tr>
            <div class="form-action">
              <th><%= f.label :password, "パスワード（６文字以上）" %></th>
              <td></td>
              <td><%= f.password_field :password %></td>
            </div>
          </tr>
          <tr>
            <div>
              <th><%= f.label :password_confirmation, "パスワード(確認用)" %></th>
              <td></td>
              <td><%= f.password_field :password_confirmation %></td>
            </div>
          </tr>
          <tr>
            <th></th>
            <td></td>
            <td><%= f.submit "新規登録", class: "btn btn-success btn-block" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>