<% post.post_comments.each do |post_comment| %>
  <p><%= image_tag post_comment.customer.get_image, size: "100x100" %></p>
  <p><%= post_comment.customer.nickname %></p>
  <p><%= post_comment.comment %></p>
  <% if post_comment.customer == current_customer %>
    <button class="btn btn-danger btn-sm mb-4" type="button">
      <%= link_to "削除", post_post_comment_path(post_comment.post,post_comment), method: :delete, class: 'text-light', remote: true %>
    </button>
  <% end %>
<% end %>