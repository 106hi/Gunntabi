<div class="container">
  <div class="row">
    <div class="col-sm-10 offset-sm-1 mt-3">
      <span style="background-color: #f2f2f2; font-size: 23px;">ログイン</span>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-sm-6 offset-sm-1">
      <span style="background-color: #f2f2f2;">会員の方はこちらからログイン</span>
    </div>
  </div>
  <%= form_with model: @customer, url: customer_session_path do |f| %>
    <div class="row my-5">
      <div class="col-lg-2 col-md-3 col-sm-4 offset-sm-1">
        <%= f.label :email, "メールアドレス" %>
      </div>
      <div class="col-sm-5">
        <%= f.text_field :email, size: "35", autofocus: true %>
      </div>
    </div>
    <div class="row my-3">
      <div class="col-lg-2 col-md-3 col-sm-4 offset-sm-1">
        <%= f.label :password, "パスワード" %>
      </div>
      <div class="col-sm-5">
        <%= f.password_field :password, size: "35" %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2 offset-sm-3">
        <%= f.submit "ログイン", class: "btn btn-primary px-4 mt-3 mb-5" %>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-8 offset-sm-1">
      <%= render "public/shared/links" %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-sm-8 offset-sm-1">
      <span style="background-color: #f2f2f2; font-size: 20px;">管理者の方</span><br>
      <div class="ml-4 mt-3"><%= link_to "こちら", new_admin_session_path %>からログインしてください。</div>
    </div>
  </div>
</div>