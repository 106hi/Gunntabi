<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <span style="background-color: #f2f2f2; font-size: 23px;">ログイン</span>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-sm-4 px-sm-0 offset-sm-1">
      <span style="background-color: #f2f2f2;">会員の方はこちらからログイン</span>
    </div>
  </div>
  <%= form_with model: @customer, url: customer_session_path do |f| %>
    <table>
      <tr>
        <div class="form_group">
          <th><%= f.label :email, "メールアドレス" %></th>
          <td><%= f.text_field :email, :size => "40", autofocus: true, autocomplete: "email" %></td>
        </div>
      </tr>
      <tr>
        <div class="form-action">
          <th><%= f.label :password, "パスワード" %></th>
          <td><%= f.password_field :password, :size => "40", autocomplete: "current-password" %></td>
        </div>
      </tr>
      <!--<tr>-->
        <%# if devise_mapping.rememberable? %>
          <!--<div class="field">-->
            <%#= f.check_box :remember_me %>
            <%#= f.label :remember_me %>
          <!--</div>-->
        <%# end %>
      <!--</tr>-->
      <tr>
        <th></th>
        <td><%= f.submit "ログイン", class: "btn btn-primary btn-block" %></td>
      </tr>
    </table>
  <% end %>
  <%= render "public/shared/links" %>
</div>