<div class="search-form">
  <% if admin_signed_in? %>
    <%= form_with url: admin_search_path, method: :get, local: true do |f| %>
      <%= f.text_field :keyword, value: keyword %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  <% else %>
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <%= f.text_field :keyword, value: keyword %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  <% end %>
</div>